<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f2ef" >
    <RelativeLayout 
        android:id="@+id/schedulenew"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff">
        <View 
            android:id="@+id/schedulenewview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#909090"
            android:layout_marginLeft="15dp"/>
        <ImageView 
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/dengdaishenhe"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>
        
        <TextView 
            android:id="@+id/schedulenewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/schedulenewview"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/wancheng"
            android:text="xxxxxxxxxxxxx"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/wancheng"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/pic_gaizhang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:visibility="gone"/>
        <TextView 
            android:id="@+id/schedulenewtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/schedulenewview"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="#909090"
            android:text="cccccccc"
            android:layout_below="@id/schedulenewtext"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/scheduleold"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:visibility="gone">
        <View 
            android:id="@+id/scheduleoldview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#909090"
            android:layout_marginLeft="15dp"/>
        <ImageView 
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/pic_dian2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>
        <TextView 
            android:id="@+id/scheduleoldtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scheduleoldview"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="xxxxxxxxxxxxx"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/scheduleoldtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scheduleoldview"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="#909090"
            android:text="cccccccc"
            android:layout_below="@id/scheduleoldtext"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/scheduleancestor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:visibility="gone">
        <View 
            android:id="@+id/scheduleancestorview"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#909090"
            android:layout_marginLeft="15dp"/>
        <ImageView 
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/pic_dian2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>
        <TextView 
            android:id="@+id/scheduleancestortext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scheduleancestorview"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="xxxxxxxxxxxxx"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/scheduleancestortime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scheduleancestorview"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="#909090"
            android:text="cccccccc"
            android:layout_below="@+id/scheduleancestortext"/>
    </RelativeLayout>
       <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff">
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#909090"
            android:layout_marginLeft="15dp"/>
       </RelativeLayout> 
</LinearLayout>
