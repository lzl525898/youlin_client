<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <!--
             <TextView
            android:id="@+id/gonggao_range_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#323232"
            android:textSize="16sp" />
        -->

        <LinearLayout
            android:id="@+id/choose_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gonggao_range_img1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_weixuanzhong" />

                <TextView
                    android:id="@+id/gonggao_range_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停水通知"
                    android:textColor="#323232"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gonggao_range_img2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_weixuanzhong" />

                <TextView
                    android:id="@+id/gonggao_range_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴费通知"
                    android:textColor="#323232"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose_layout1"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gonggao_range_img3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_weixuanzhong" />

                <TextView
                    android:id="@+id/gonggao_range_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="活动通知"
                    android:textColor="#323232"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gonggao_range_img4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_weixuanzhong" />

                <TextView
                    android:id="@+id/gonggao_range_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他 "
                    android:textColor="#323232"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>