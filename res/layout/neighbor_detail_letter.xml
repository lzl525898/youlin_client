<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/detail_parent" >
    <LinearLayout
        android:id="@+id/pop_empty"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical" ></LinearLayout>
    <LinearLayout
        android:id="@+id/for_letter_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff7700"
        android:gravity="bottom"
        android:orientation="vertical" >

       <LinearLayout
            android:id="@+id/neighbor_detail_top"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp" >


			<ImageView
         		android:id="@+id/neighbor_detail_image" 
    			android:layout_width="65dp"
                android:layout_height="match_parent" 
                android:background="@drawable/red_circle"
    			android:scaleType="fitCenter"
    			android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/neighbor_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="何永毅"
                android:textColor="#ffffff"
                android:textSize="55dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/neighbor_detail_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="他很懒，什么都没留下！"
            android:textColor="#ffffff"
            android:textSize="20dp" 
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/neighbor_detail_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button"
            android:text="私信"
            android:textColor="#ff7700"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
