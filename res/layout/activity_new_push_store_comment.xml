<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f0" >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/evaluate_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:layout_marginTop="13dip"
                android:background="@null"
                android:gravity="top"
                android:hint="菜品口味如何，服务周到吗，环境如何？（尽量多写一些，让更多的人看到你的评价）"
                android:maxLength="200"
                android:minHeight="100dip"
                android:textColor="#323232"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/store_tanhao_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tanhao"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#eeeeee" />

        <com.nfs.youlin.utils.NoScrollGridView
            android:id="@+id/noScrollgridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="13dip"
            android:descendantFocusability="blocksDescendants"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:scrollbars="vertical"
            android:verticalSpacing="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="13dip"
            android:text="传几张真实的图片，让你的评价更真实!"
            android:textColor="#ffba01"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/check"
                android:layout_marginRight="5dip"
                android:text="匿名评价"
                android:textColor="#cccccc"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                style="@style/CustomCheckboxTheme" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:text="店铺评分"
            android:textColor="#323232"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attitude_star_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:text="服务态度"
            android:textColor="#323232"
            android:textSize="13sp" />

        <RatingBar
            android:id="@+id/attitude_star"
            style="@style/RadingStyleBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dip"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_star_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:text="菜品口味"
            android:textColor="#323232"
            android:textSize="13sp" />

        <RatingBar
            android:id="@+id/food_star"
            style="@style/RadingStyleBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dip"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/env_star_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:text="环境等级 "
            android:textColor="#323232"
            android:textSize="13sp" />

        <RatingBar
            android:id="@+id/env_star"
            style="@style/RadingStyleBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="81dip"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5" />
    </LinearLayout>
	</LinearLayout>
</ScrollView>