<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/main"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/main_search_return"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/nav_fanhui_xin_tiao"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_alignParentLeft="true"/>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="30dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="5dp"
    	android:layout_toRightOf="@+id/main_search_return"
    	android:layout_toLeftOf="@+id/main_search"
    	android:layout_centerVertical="true"
    	android:background="@drawable/white_edittext"
    	android:orientation="horizontal">
    
    <Button 
        android:id="@+id/main_search_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dip"
        android:background="@drawable/null_view"
        android:drawableRight="@drawable/right_arrow_icon"
        android:text="搜全部"
        android:textSize="16sp"
        android:textColor="#323232"/>
    <EditText 
        android:id="@+id/main_search_etail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/main_search_button"
        android:padding="1dip"
        android:textColorHint="#AAAAAA"
        android:background="@drawable/null_view"
        android:hint="请输入关键字"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="#323232"/>
    </LinearLayout>
    <Button 
        android:id="@+id/main_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dip"
        android:textColor="#ffffff"
        android:background="#00000000"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:text="搜索"
        android:layout_alignParentRight="true"/>
	
</RelativeLayout>
