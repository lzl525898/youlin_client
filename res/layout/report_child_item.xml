<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/id_child_img"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/pic_report_child_touxiang" />
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/id_child_img"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="8dip"
        android:textColor="#323232"
        android:textSize="13sp" />
    <TextView 
        android:id="@+id/report_child_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dip"
        android:layout_marginRight="16dip"
        android:textColor="#999999"
        android:textSize="12sp"/>
	<TextView 
	    android:id="@+id/report_child_content_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="8dip"
	    android:layout_marginLeft="8dip"
	    android:layout_marginRight="16dip"
	    android:layout_toRightOf="@+id/id_child_img"
	    android:layout_below="@+id/name_tv"
	    android:textColor="#999999"
        android:textSize="12sp"/>
	<ImageView
  	    android:id="@+id/img"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:background="@drawable/icon_fengexian"/>
</RelativeLayout>