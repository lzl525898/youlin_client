<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="match_parent"
   	android:layout_height="match_parent"
    android:background="@color/main">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="210dip" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/login"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="91dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="22dip"
        android:layout_below="@+id/layout1"
        android:background="@drawable/bg_yonghumima" >

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="45dip" >
	  		<RelativeLayout 
			    android:id="@+id/iv_username"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_alignParentRight="true"
			    android:paddingRight="13dip"
			    android:visibility="gone" >
            	<ImageView
              		android:layout_width="15dip"
               		android:layout_height="15dip"
                	android:layout_centerVertical="true"
                	android:background="@drawable/btn_x"/>
			</RelativeLayout>
            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_username"
                android:background="@null"
                android:hint="手机号:"
                android:inputType="phone"
                android:phoneNumber="true"
                android:digits="1234567890"
                android:paddingLeft="13dip"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLength="11" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_below="@+id/rl_username"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@+id/view" >
			<RelativeLayout 
			    android:id="@+id/iv_password"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_alignParentRight="true"
			    android:paddingRight="13dip"
			    android:visibility="gone" >
            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_x"/>
			</RelativeLayout>
            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_password"
                android:background="@null"
                android:hint="密码:"
                android:inputType="textPassword"
                android:paddingLeft="13dip"
                android:singleLine="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dip"
        android:layout_marginTop="11dip"
        android:text="忘记密码"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forget_password"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:orientation="vertical" >
		<Button
		    android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/bg_dengluzhuce"
            android:gravity="center"
            android:onClick="login"
            android:text="登录"
            android:textColor="#fee1b5"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="11dip"
            android:background="@drawable/bg_dengluzhuce"
            android:gravity="center"
            android:onClick="register"
            android:text="注册"
            android:textColor="@color/main"
            android:textSize="16sp" />
    </LinearLayout>
    <Button 
        android:id="@+id/qq_bt"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/qq"
        android:layout_below="@+id/layout3"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!-- <TextView 
            android:id="@+id/advice_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#ffffff"
            android:textSize="13sp"/>  -->
        <TextView 
            android:id="@+id/tv_web_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>