<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/jiangpinimg"
            android:layout_width="70dip"
            android:layout_height="62dip"
            android:layout_marginBottom="14dip"
            android:layout_marginLeft="12dip"
            android:scaleType="fitCenter"
            android:src="@drawable/pic_ka"/>
        <RelativeLayout 
           	android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/jiangpinimg"
            android:layout_marginLeft="8dip" >
            <TextView 
                android:id="@+id/jiangpinname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:text="香雪麦纯富强粉"
                android:layout_marginBottom="14dip"
                android:textColor="#323232"
                android:lines="2"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/jiangpinname"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/needcreditdate"
                    android:layout_width="wrap_content"
                    android:layout_height="25dip"
                    android:textColor="@color/main"
                    android:textSize="20sp"
                    android:text="50"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textColor="@color/main"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dip"
                    android:text="分"/>
            </LinearLayout>


            
        </RelativeLayout>
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="36dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
	    <ImageView 
	        android:id="@+id/lingqu"
	        android:layout_width="wrap_content"
	        android:layout_height="26dip"
	        android:src="@drawable/dianjilingqu_a"
	        android:scaleType="fitCenter"
	        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
</LinearLayout>
