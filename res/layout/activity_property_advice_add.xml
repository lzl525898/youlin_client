<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2ef" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f2ef"
        android:orientation="vertical">
		<View
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_marginTop="12dp"
            android:background="#CCCCCC" />
        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#ffffff">
            <EditText
                android:id="@+id/property_advice_add_title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dip"
                android:layout_toLeftOf="@+id/property_advice_add_title_img"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:hint="标题"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColorHint="#cccccc"
                android:textColor="#323232"
                android:maxLength="64" />

            <ImageView
                android:id="@+id/property_advice_add_title_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/tanhao"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_below="@+id/title_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_below="@+id/view1" >

            <EditText
                android:id="@+id/property_advice_add_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dip"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/property_advice_add_content_img"
                android:background="@null"
                android:hint="描述内容..."
                android:textColorHint="#cccccc"
                android:textColor="#646464"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/property_advice_add_content_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/tanhao"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
            
               <com.nfs.youlin.utils.NoScrollGridView
                android:id="@+id/noScrollgridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dip"
                android:descendantFocusability="blocksDescendants"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:scrollbars="vertical"
                android:verticalSpacing="5dp" 
                android:layout_below="@id/property_advice_add_content_et"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>

