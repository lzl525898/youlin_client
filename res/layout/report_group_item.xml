<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"
    android:background="#ffffff"   >
    <LinearLayout
        android:id="@+id/layout" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
  	    android:id="@+id/img1"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:background="@drawable/icon_fengexian"/>
  	<ImageView 
  	    android:id="@+id/img2"
  	    android:layout_width="match_parent"
  	    android:layout_height="7dip"
  	    android:background="#f3f2f0"/>
  	</LinearLayout>
    <RelativeLayout
        android:id="@+id/layout1" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout">  
    <TextView  
        android:id="@+id/id_group_txt"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dip"
        android:layout_marginBottom="18dip"
        android:layout_marginLeft="16dip"
		android:layout_centerVertical="true"
        android:textSize="16sp"  
        android:textColor="#323232" />  
  	<TextView 
  	    android:id="@+id/report_group_tv"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_toLeftOf="@+id/report_group_img"
  	    android:layout_marginRight="16dip"
  	    android:textSize="13sp"
  	    android:textColor="#808080"
  	    android:layout_centerVertical="true"/>
  	<ImageView 
  	    android:id="@+id/report_group_img"
  	    android:layout_width="16dip"
  	    android:layout_height="8dip"
  	    android:layout_alignParentRight="true"
  	    android:layout_marginRight="16dip"
  	    android:layout_centerVertical="true"
  	    android:background="@drawable/icon_jiantou_xia"/>
  	</RelativeLayout>
</RelativeLayout>