<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_push_msg_item"
    android:layout_width="fill_parent"
    android:layout_height="73dip"
    android:background="#FFFFFF"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >
<!--  android:background="@drawable/view_yuan_morelist" -->
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:layout_gravity="center_vertical"
	    android:orientation="horizontal" >
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_horizontal|center_vertical">
	        <com.nfs.youlin.view.CircleImageView
	        android:id="@+id/roundImageView"
	        android:layout_marginLeft="10dip"
	        android:layout_width="43dip"
	        android:layout_height="43dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/account"/>
		    <ImageView 
		        android:id="@+id/iv_push_info_read_status"
		        android:layout_width="7dip"
		        android:layout_height="7dip"
		        android:layout_alignRight="@+id/roundImageView"
		        android:src="@drawable/dengdaishenhe" />
	    </RelativeLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dip"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	            <LinearLayout
	                android:layout_width="0dip"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="top"
	                android:orientation="vertical" >
	                <TextView
	                    android:id="@+id/tv_newmessage_title"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dip"
	                    android:maxLines="1"
	                    android:maxEms="10"
	                    android:layout_marginTop="15dip"
	                	android:singleLine="true"
	                	android:ellipsize="end" 
	                	android:textColor="#323232"
	                    android:textSize="16sp" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:orientation="vertical" >
	                <TextView
	                    android:id="@+id/tv_newmessage_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="16dip"
	                    android:layout_marginRight="16dip"
	                    android:textColor="#999999"
	                    android:textSize="12sp" />
	            </LinearLayout>
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="bottom"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/tv_newmessage_content"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="10dip"
	                android:layout_marginBottom="7dip"
	                android:maxEms="16"
	                android:singleLine="true"
	                android:ellipsize="end" 
	                android:textColor="#999999"
	                android:textSize="13sp" />
	        </LinearLayout>
	        
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>