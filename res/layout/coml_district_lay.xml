<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="20dip">
        <ImageView 
            android:id="@+id/meishiview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_meishi"
            android:scaleType="fitCenter"/>
        <ImageView 
            android:id="@+id/yuleview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_yule"
            android:scaleType="fitCenter"/>
        <ImageView 
            android:id="@+id/gouwuview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_gouwu"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="6dip">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="美食"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="娱乐"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="购物"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
    </LinearLayout>
	<LinearLayout 
	     android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="17dip">
	    <ImageView 
	        android:id="@+id/jianshenview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_jianshen"
            android:scaleType="fitCenter"/>
        <ImageView 
            android:id="@+id/yinhangview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_yinhang"
            android:scaleType="fitCenter"/>
        <ImageView 
            android:id="@+id/qitaview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_qita"
            android:scaleType="fitCenter"/>
	</LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="6dip">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="健身"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="银行"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="其他"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#323232"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="13dip"
        android:layout_marginTop="15dip"
        android:background="#f3f3f0"/>
    <LinearLayout 
        android:layout_height="37dip"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="12dip"
            android:src="@drawable/icon_heart"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="11dip"
            android:textSize="13sp"
            android:textColor="#323232"
            android:text="猜你喜欢"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/fengexian"/>
    <ListView 
        android:id="@+id/ylike_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
