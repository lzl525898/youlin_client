<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2f0">

    <RelativeLayout
        android:id="@+id/occupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip">

        <EditText
            android:id="@+id/occupName"
            android:layout_width="match_parent"
            android:layout_height="53dip"
            android:paddingLeft="16dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_change_pwd"
            android:textColor="#323232"
            android:textSize="16sp"
            android:maxLength="10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/occup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupLayout"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="25dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:text="请输入职业名称，如：音乐教师，与更多的业内人士进行交流。"
        android:textSize="12sp"
        android:textColor="#999999" />

    <RelativeLayout
        android:id="@+id/open_layout"
        android:layout_width="match_parent"
        android:layout_height="53dip"
        android:layout_below="@+id/occup_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dip"
            android:text="公开职业:"
            android:textColor="#323232"
            android:textSize="16sp" />

        <com.nfs.youlin.view.SwitchView
            android:id="@+id/occup_switch"
            android:layout_width="42dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip"/>
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/open_layout"
	    android:paddingLeft="16dip"
	    android:paddingRight="16dip"
	    android:background="#ffffff"
	    android:orientation="vertical">
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:background="#eeeeee"/>
	</LinearLayout>	
    <TextView
        android:id="@+id/open_good_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:paddingTop="16dip"
        android:paddingBottom="13dip"
        android:paddingLeft="16dip"
        android:text="公开职业的好处"
        android:textColor="#323232"
        android:textSize="16sp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_good_tv"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingBottom="13dip"
        android:text="找到更多同兴趣的好友，一起交流进步，与此同时也能与其他行业的好友进行沟通，扩展知识面，发现自己感兴趣的圈子，从而丰富自己的生活。"
        android:textSize="12sp"
        android:textColor="#646464"
        android:background="#ffffff" />

</RelativeLayout>