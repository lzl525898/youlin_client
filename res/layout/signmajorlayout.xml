<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/xiangyun"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:background="@drawable/bg" >

        <ImageButton
            android:id="@+id/signbutton"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_qiandao_c"
            android:tag="signed" />

        <TextView
            android:id="@+id/currentjifen"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@id/signbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="我的积分："
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/signmap"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/currentjifen"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="23dip"
            android:scaleType="fitXY"
            android:src="@drawable/zhouqi" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@id/currentjifen"
            android:layout_marginTop="23dip"
            android:background="#00ffffff" >

            <ImageView
                android:id="@+id/signedimgright"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="fitStart"
                android:src="@drawable/yuan"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_toLeftOf="@id/signedimgright"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/signedimg1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/signedimg2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/signedimg3"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/signedimg4"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/signedimg5"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/signedimg6"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:src="@drawable/yuan"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signmap" >

            <TextView
                android:id="@+id/signday7"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:text="2.7"
                android:textColor="#784700"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/signlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_toLeftOf="@id/signday7"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/signday1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.17"
                    android:textColor="#784700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signday2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.17"
                    android:textColor="#784700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signday3"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.17"
                    android:textColor="#784700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signday4"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.17"
                    android:textColor="#784700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signday5"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.17"
                    android:textColor="#784700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signday6"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="#784700"
                    android:textSize="12sp" />
                <!--
                 <TextView 
            	android:id="@+id/signday7"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="2.7"
            	android:textSize="12sp"
            	android:layout_weight="1"
            	android:textColor="#784700"/>
                -->
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xiangyun" >

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>