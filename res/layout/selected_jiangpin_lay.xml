<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        
        <LinearLayout 
            android:layout_width="141dip"
            android:layout_height="160dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_normal"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/selectedgiftview"
            	android:layout_width="match_parent"
            	android:layout_height="110dip"
            	android:layout_marginTop="15dip"
            	android:layout_marginLeft="10dip"
            	android:layout_marginRight="10dip"
            	android:layout_gravity="center_horizontal"
            	android:scaleType="fitCenter"
            	android:background="@drawable/bg_button_normal"/>
            <TextView 
                android:id="@+id/selectedgiftname"
                android:layout_width="wrap_content"
            	android:layout_height="20dip"
            	android:layout_marginTop="10dip"
            	android:layout_gravity="center_horizontal"
            	android:background="@drawable/bg_button_normal"
            	android:text="测测测测测"
            	android:textColor="#808080"
            	android:textSize="12sp"/>
        </LinearLayout>
        <com.nfs.youlin.view.addandreducecenteredit
            android:id="@+id/giftcount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="35dip"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_normal" >
        </com.nfs.youlin.view.addandreducecenteredit>
    </LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="45dip"
	    android:layout_alignParentBottom="true"
	    android:background="#ffffff">
	    <Button 
	        android:id="@+id/ensureget"
	        android:layout_width="99dip"
	        android:layout_height="match_parent"
	        android:background="@color/main"
	        android:text="确定"
	        android:textSize="16sp"
	        android:textColor="#323232"
	        android:layout_alignParentRight="true"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toLeftOf="@id/ensureget">
	        <LinearLayout 
	            android:layout_height="22dip"
	            android:layout_width="wrap_content"
	            android:orientation="horizontal"
	            android:layout_centerInParent="true"
	            android:gravity="center">
	            <TextView 
	                android:layout_height="match_parent"
	                android:layout_width="wrap_content"
	                android:textColor="#323232"
	                android:textSize="14sp"
	                android:text="合计："
	                android:gravity="bottom"
	                android:layout_marginBottom="2dip"
	                android:layout_gravity="center_vertical"/>
	            <TextView 
	                android:id="@+id/sumcredit"
	               	android:layout_height="match_parent"
	                android:layout_width="wrap_content" 
	                android:textColor="@color/main"
	                android:textSize="21sp"
	                android:text="200"
	                android:gravity="bottom"
	                android:lineSpacingExtra="0dip"
	                android:layout_gravity="center_vertical"/>
	            <TextView 
	               	android:layout_height="match_parent"
	                android:layout_width="wrap_content" 
	                android:textColor="@color/main"
	                android:textSize="14sp"
	                android:text=" 积分"
	                android:layout_marginBottom="2dip"
	                android:gravity="bottom"
	                android:layout_gravity="center_vertical"/>
	            <TextView 
	                android:id="@+id/enabledexchange"
	               	android:layout_height="match_parent"
	                android:layout_width="wrap_content" 
	                android:textColor="#fa5b11"
	                android:textSize="14sp"
	                android:text=" （您的积分未达到）"
	                android:layout_marginBottom="2dip"
	                android:gravity="bottom"
	                android:layout_gravity="center_vertical"
	                android:singleLine="true"
	                android:ellipsize="end"
	                android:visibility="gone"/>
	        </LinearLayout>
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
