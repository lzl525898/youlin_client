<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="66dip"
    android:background="@drawable/bg_account"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/neighbor_head" 
    	android:layout_width="40dp"
    	android:layout_height="40dp" 
    	android:scaleType="fitCenter"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="17dip"
    	android:layout_marginRight="11dip"
    	android:layout_marginTop="13dip"
    	android:layout_marginBottom="13dip"/>

    <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/neighbor_head"
        android:layout_centerVertical="true"
    	android:layout_marginRight="5dp"
       	android:orientation="vertical">

        <TextView 
            android:id="@+id/nerghbor_name" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:maxEms="6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp" />
        <TextView 
            android:id="@+id/nerghbor_detail" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="12sp" />
    </LinearLayout>
    
	<TextView android:id="@+id/nerghbor_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dip"
            android:layout_marginRight="20dip" 
            android:textColor="#323232"      
            android:maxEms="6"
            android:ellipsize="end"
            android:singleLine="true"     
            android:layout_alignParentRight="true"
            android:textSize="12sp" />
	<View 
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#f3f0f0"
		    android:layout_alignParentBottom="true"/>
</RelativeLayout>
