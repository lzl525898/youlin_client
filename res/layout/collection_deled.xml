<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialogactivitystyle" >
    <ImageView 
        android:layout_width="67dip"
        android:layout_height="67dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dip"
        android:background="@drawable/tuan"/>
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="此内容已被发布者删除，是否删除该收藏"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="27dp"
	    android:textColor="#808080"
	    android:textSize="14sp" />
	<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="33dip"
        android:background="@drawable/fengexian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/canceldelcol"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calendarstyle"
            android:text="取消" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#999999" />

        <Button
            android:id="@+id/okdelcol"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calendarstyle"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>
