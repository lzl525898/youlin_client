<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2ef"
    tools:context=".BarterRangeActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="13dip"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/new_topic_range_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:textColor="#646464"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/new_topic_range_tv1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			<LinearLayout
			    android:id="@+id/new_topic_range_tv2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
            <ImageView
                android:id="@+id/new_topic_range_img1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:background="@drawable/btn_weixuanzhong"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本小区"
                android:textColor="#323232"
                android:textSize="14sp" />
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/new_topic_range_tv3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
            <ImageView
                android:id="@+id/new_topic_range_img2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="13dip"
                android:background="@drawable/btn_weixuanzhong"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周边"
                android:textColor="#323232"
                android:textSize="14sp" />
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/new_topic_range_tv4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
            <ImageView
                android:id="@+id/new_topic_range_img3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="13dip"
                android:background="@drawable/btn_weixuanzhong"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同城"
                android:textColor="#323232"
                android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>