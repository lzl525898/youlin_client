<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/repair_detail_scall"
    android:background="#ffffff" >
<RelativeLayout
    android:id="@+id/friend_circle_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <LinearLayout
        android:id="@+id/repair_item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="11dip"
            android:background="#f3f2ef" />

        <RelativeLayout
            android:id="@+id/repairuser_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/repair_head_img"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="13dip" />

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/repair_head_img"
                android:textColor="#646464"
                android:textSize="14sp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/repairtitle_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="13dip"
                android:layout_toLeftOf="@+id/topic_time"
                android:textColor="#323232"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dip"
                android:textColor="#646464"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/content_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:layout_marginTop="18dip"
            android:textColor="#323232"
            android:textSize="14sp" />

        <com.nfs.youlin.utils.NoScrollGridView
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:horizontalSpacing="5dip"
            android:listSelector="@null"
            android:numColumns="3"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="none"
            android:verticalSpacing="5dip" />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dizhixinxi"/>
            <TextView 
		    	android:id="@+id/address_text"
		    	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_gravity="center_vertical"
            	android:layout_marginLeft="10dp"
            	android:textSize="14sp"/>
        </LinearLayout>
		
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="10dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:id="@+id/neighbor_hint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/letter_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/letter_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/coment" />

                    <TextView
                        android:id="@+id/letter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="私信"
                        android:textColor="#323232" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/telephone_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/telephone_img"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dianhua" />

                    <TextView
                        android:id="@+id/telephone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="电话"
                        android:textColor="#323232" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/jindu_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/jindu_img"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jindu" />

                    <TextView
                        android:id="@+id/jindu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="进度"
                        android:textColor="#323232" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/repair_item_lay"
        android:background="@drawable/fengexian" />
    <LinearLayout 
        android:id="@+id/schedulelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/repair_item_lay"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout 
           android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp" >
            <ImageButton 
                android:id="@+id/gonging_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:background="@drawable/btn_weixuanzhong"/>
            <View 
               	android:id="@+id/viewspace1"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/gonging_status"
                android:background="#eeeeee" />
            <ImageButton 
                android:id="@+id/start_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:layout_toLeftOf="@id/viewspace1"
                android:background="@drawable/dengdaishenhe"/>
            <View 
               	android:id="@+id/viewspace2"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gonging_status"
                android:background="#eeeeee" />
            <ImageButton 
                android:id="@+id/end_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:layout_toRightOf="@id/viewspace2"
                android:background="@drawable/btn_weixuanzhong"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp">
            <TextView 
                android:id="@+id/gonging_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="审核通过\n派人维修"
                android:textSize="12sp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/gonging_text"
                android:layout_alignParentLeft="true"
                android:text="等待审核"
                android:textSize="12sp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gonging_text"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="已维修"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>