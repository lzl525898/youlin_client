<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2ef"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f2ef"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/top_img"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:layout_marginTop="150dip"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dip" />

        <RelativeLayout
            android:id="@+id/adrress_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_account"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/first_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/store_dizhi"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/adrress"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="11dip"
                android:layout_toRightOf="@+id/first_img"
                android:gravity="center_vertical"
                android:text="详细地址："
                android:textColor="#323232"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adrress_detail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/location_icon"
                android:layout_toRightOf="@+id/adrress"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#323232"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:layout_width="17dip"
                    android:layout_height="16dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="13dip"
                    android:background="@drawable/store_daohang" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/second_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:background="@drawable/store_shijian"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="11dip"
                android:layout_toRightOf="@+id/second_img"
                android:gravity="center_vertical"
                android:text="营业时间："
                android:textColor="#323232"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time_detail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/time"
                android:gravity="center_vertical"
                android:textColor="#323232"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_account"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/third_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:background="@drawable/store_dianhua"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="11dip"
                android:layout_toRightOf="@+id/third_img"
                android:gravity="center_vertical"
                android:text="预约电话："
                android:textColor="#323232"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone_detatil"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/phone"
                android:gravity="center_vertical"
                android:textColor="#323232"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dip" />

        <RelativeLayout
            android:id="@+id/acount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="37dip"
                    android:layout_height="37dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="13dip"
                    android:layout_marginLeft="13dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginBottom="13dip" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dip"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/head"
                    android:textColor="@color/main"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/head"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b3b3b3"
                        android:textSize="12sp" />

                    <RatingBar
                        android:id="@+id/star"
                        style="@style/RadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginBottom="13dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:gravity="top"
                android:textColor="#323232"
                android:textSize="12sp" />

            <com.nfs.youlin.utils.NoScrollGridView
                android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/content"
                android:layout_marginBottom="13dip"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:horizontalSpacing="5dip"
                android:listSelector="@null"
                android:numColumns="3"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="none"
                android:verticalSpacing="5dip" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_below="@+id/gridView"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="13dip"
                android:background="#eeeeee" />

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:layout_below="@+id/view1"
                android:background="@drawable/bg_account"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/look_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dip"
                    android:text="查看全部评价"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dip"
                    android:background="@drawable/zhixiang" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/bottom_id"
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:layout_marginBottom="50dip"
            android:background="@drawable/fengexian"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>