<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/et_verificat_phone"
            android:layout_width="193dip"
            android:layout_height="53dip"
            android:layout_marginRight="19dip"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_verificat_getvcode"
            android:inputType="phone"
            android:textSize="16sp"
            android:digits="1234567890"
            android:maxLength="11"
            android:hint="请输入手机号"/>
        <com.nfs.youlin.view.VerificationTimeButtonBind
            android:id="@+id/tv_verificat_getvcode"
            android:layout_width="116dip"
            android:layout_height="53dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_get_verification_code"/>
    </RelativeLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText 
	            android:id="@+id/et_verificat_vcode"
	            android:layout_width="fill_parent"
	            android:layout_height="53dip"
	            android:layout_gravity="center_vertical"
	            android:maxLength="4"
	            android:inputType="phone"
	            android:textSize="16sp"
	            android:hint="请输入验证码"/>
            <ImageView 
                android:id="@+id/iv_vcode_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"/>
        </RelativeLayout>
     </LinearLayout>
     <Button
         android:id="@+id/bind_bt" 
         android:layout_width="80dip"
         android:layout_height="40dip"
         android:layout_marginTop="13dip"
         android:text="登录"
         android:textSize="16sp"
         android:textColor="#ffffff"
         android:background="@drawable/bg_get_verification_code"
         android:layout_gravity="center_horizontal"/>
</LinearLayout>
