<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2f0"
    tools:context=".PropertyAboutActivity" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="73dip"
            android:layout_height="73dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dip"
            android:background="@drawable/pic_youlin" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dip"
            android:text="优邻V??"
            android:textColor="#323232"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="30dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="优邻"
                android:textColor="#ffba02"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="5dip"
                android:layout_height="5dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/pic_yuandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="只是方便生活 "
                android:textColor="#ffba02"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relayout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/layout"
        android:layout_marginTop="73dip"
        android:background="@drawable/bg_account"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:text="检查版本更新"
            android:textColor="#323232"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/private_policy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/company"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dip"
        android:text="使用条款和隐私政策"
        android:textColor="#ffba02"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dip"
        android:text="北京有凡科技有限公司  版权所有"
        android:textColor="#999999"
        android:textSize="13sp" />

</RelativeLayout>